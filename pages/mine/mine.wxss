/* pages/mine/mine.wxss */
.container {
  min-height: 100vh;
  background-color: #f8f8f8;
  padding: 20rpx;
  box-sizing: border-box;
}

/* 用户信息区域 */
.user-info {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.avatar-wrapper {
  padding: 0;
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 30rpx;
  background-color: transparent;
  border: none;
}

.avatar-wrapper::after {
  border: none;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background-color: #f0f0f0;
}

.user-detail {
  flex: 1;
}

.nickname {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.user-stats {
  display: flex;
  font-size: 26rpx;
  color: #666;
}

.coins {
  margin-right: 30rpx;
}

/* 功能列表 */
.feature-list {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.feature-item {
  display: flex;
  align-items: center;
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
  position: relative;
}

.feature-item:last-child {
  border-bottom: none;
}

.feature-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}

.feature-text {
  font-size: 30rpx;
  color: #333;
  flex: 1;
}

.feature-desc {
  font-size: 24rpx;
  color: #999;
  margin-right: 30rpx;
}

.feature-item::after {
  content: '';
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%) rotate(45deg);
  width: 16rpx;
  height: 16rpx;
  border-top: 2rpx solid #ccc;
  border-right: 2rpx solid #ccc;
}

/* 广告容器 */
.ad-container {
  margin-top: 20rpx;
  width: 100%;
}

/* 按钮点击效果 */
.feature-item:active {
  background-color: #f5f5f5;
}

/* 输入框样式 */
input {
  padding: 10rpx 0;
}

/* 提示文本 */
.tip-text {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  margin-top: 20rpx;
}